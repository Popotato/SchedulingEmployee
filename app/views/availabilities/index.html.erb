<header style="padding-top: 8em;">
  <div id="banner">
    <div id="banner-content">
      <div id="logo">
        <%= image_tag "logo.png", size: "100x100" %>    
      </div>
    </div>
  </div>
</header>

<p id="notice"><%= notice %></p>

<h1>Availabilities</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= link_to availability.employee.firstname + " " + availability.employee.lastname, availability.employee %></td>
        <td><%= availability.starttime %></td>
        <td><%= availability.endtime %></td>
        <td><%= link_to 'View', availability %></td>
        <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <td><%= link_to 'Delete', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Availability', new_availability_path %>
