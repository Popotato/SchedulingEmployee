<header>
  <div id="banner">
    <div id="banner-content">
      <div id="logo">
        <%= image_tag "logo.png", size: "100x100" %>    
        <div id="signed_in">
          <% if signed_in? %>
            <div style="color: white; font-size: 17px; margin-bottom: 10px;" >
                You are signed in as: <%= current_user.email %>
              </div>
              <div style="text-align: right;">
                <%= button_to 'Sign out', sign_out_path, method: :delete %>
              </div>
          <% else %>
              <%= link_to 'Sign in', sign_in_path %>
          <% end %>   
       </div>
      </div>
    </div>
  </div>
</header>

<p id="notice"><%= notice %></p>

<h1>Availabilities</h1>

<table align="center">
  <thead>
    <tr>
      <th class="rows">Employee</th>
      <th class="rows">Start time</th>
      <th class="rows">End time</th>
      <th colspan="3" class="rows">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td class="rows"><%= link_to availability.employee.firstname + " " + availability.employee.lastname, availability.employee %></td>
        <td class="rows"><%= availability.starttime %></td>
        <td class="rows"><%= availability.endtime %></td>
        <td class="rows"><%= link_to 'View', availability %></td>
        <td class="rows"><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <td class="rows"><%= link_to 'Delete', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="newavailability">
  <%= link_to 'New Availability', new_availability_path, :style=>'color: white;' %>
</div>

<div id="employeebutton">
  <%= link_to 'Return', employees_path, :style=>'color: white;' %>
</div>
