<div id="banner">
  <div id="banner-content">
    <div id="logo">
      <%= image_tag "logo.png", size: "100x100" %> 
      <div id="signed_in">
      		<% if signed_in? %>
      			<div style="color: white; font-size: 17px; margin-bottom: 10px;" >
          			You are signed in as: <%= current_user.email %>
          		</div>
          		<div style="text-align: right;">
          			<%= button_to 'Sign out', sign_out_path, method: :delete %>
          		</div>
        		<% else %>
        		<div style="color: white; font-size: 20px">
          			<%= link_to 'Sign in', sign_in_path, :style=>'color: white;'  %>
          		</div>
        	<% end %>   
       </div>
    </div>
  </div>
</div>
  <h1 style="padding-top: 10px;">Welcome to Jake's Cafe!</h1>
  	<div id="new_employee">
		<%= link_to 'New here?', new_employee_path, :style=>'color: white;' %>
</div>
